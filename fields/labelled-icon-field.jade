//- Icon field with a label
//- 
//- Used inside '.form-horizontal' to display a label left of the icon field
//- 
//- Accepted arguments:
//- * label (String)
//- * field args (icon, type, name, value, placeholder)

include icon-field

mixin labelled-icon-field(args)
	.form-group
		label(for=attributes.id ? attributes.id : null).col-sm-3!= args.label
		.col-sm-9
			+icon-field(args)(id=attributes.id,class=attributes.class)
			if args.info
				.form-info= args.info
